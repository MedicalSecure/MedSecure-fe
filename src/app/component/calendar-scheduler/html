<ng-template #modalContent let-close="close">
  <div class="modal-header">
    <h4 class="modal-title"><i class="fas fa-calendar-plus"></i> Create an Event</h4>
    <button type="button" class="close" (click)="close()">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <div class="form-group">
      <label for="eventTitle" class="mr-2"><i class="fas fa-heading"></i> Event Title</label>
      <input type="text" class="form-control" id="eventTitle">
    </div>
    <br />
    <div class="form-group">
      <label for="startDate" class="mr-2"><i class="far fa-calendar-alt"></i> Start Date</label>
      <input type="datetime-local" class="form-control" id="startDate">
    </div>
    <br />
    <div class="form-group">
      <label for="endDate" class="mr-2"><i class="far fa-calendar-alt"></i> End Date</label>
      <input type="datetime-local" class="form-control" id="endDate">
    </div>
    <br />
    <div class="form-group">
      <label for="position" class="mr-2"><i class="fas fa-map-marker-alt"></i> Position</label>
      <input type="text" class="form-control" id="position">
    </div>
    <br />
    <div class="form-group">
      <form>
        <mat-form-field class="example-chip-list">
          <mat-label>Participants</mat-label>
          <mat-chip-grid #chipGrid aria-label="patient selection">
            @for (patient of patients; track patient) {
              <mat-chip-row (removed)="remove(patient)">
                {{patient}}
                <button matChipRemove [attr.aria-label]="'remove ' + patient">
                  <mat-icon>cancel</mat-icon>
                </button>
              </mat-chip-row>
            }
          </mat-chip-grid>
          <input placeholder="New patient..." #patientInput [formControl]="patientCtrl"
            [matChipInputFor]="chipGrid" [matAutocomplete]="auto"
            [matChipInputSeparatorKeyCodes]="separatorKeysCodes"
            (matChipInputTokenEnd)="add($event)"/>
          <mat-autocomplete #auto="matAutocomplete" (optionSelected)="selected($event)">
            @for (patient of filteredpatients | async; track patient) {
              <mat-option [value]="patient">{{patient}}</mat-option>
            }
          </mat-autocomplete>
        </mat-form-field>
      </form>
  
   </div>
    <br />
    <div class="form-group">
      <label for="repetition"><i class="fas fa-redo-alt"></i> Repeat</label>
      <div class="input-group">
        <select class="form-control" id="repetition">
          <option value="none" data-icon="fas fa-times">Does not repeat</option>
          <option value="every_day" data-icon="fas fa-calendar-day">Every day</option>
          <option value="every_weekday" data-icon="fas fa-calendar-alt">Every weekday</option>
          <option value="every_week" data-icon="fas fa-calendar-week">Every week</option>
        </select>
     
      </div>
    </div>
    
    
    
    <br />
    <div class="form-group">
