{
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "name": "medsecure-fe",
  "projectType": "application",
  "generators": {},
  "sourceRoot": "src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "options": {
        "outputPath": "dist/medsecure-fe/dev",
        "index": "src/index.html",
        "browser": "src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "tsconfig.app.json",
        "assets": [
          "src/favicon.ico",
          "src/assets"
        ],
        "styles": [
          {
            "input": "node_modules/@progress/kendo-theme-default/dist/all.css"
          },
          "@angular/material/prebuilt-themes/indigo-pink.css",
          "src/styles.css",
          "node_modules/@worktile/gantt/styles/index.scss"
        ],
        "scripts": []
      },
      "configurations": {
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "outputPath": "dist/medsecure-fe/dev",
          "fileReplacements": [
            {
              "replace": "src/environments/environment.ts",
              "with": "src/environments/environment.development.ts"
            }
          ]
        },
        "staging": {
          "outputPath": "dist/medsecure-fe/staging",
          "fileReplacements": [
            {
              "replace": "src/environments/environment.ts",
              "with": "src/environments/environment.staging.ts"
            }
          ]
        },
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "src/environments/environment.ts",
              "with": "src/environments/environment.prod.ts"
            }
          ],
          "outputPath": "dist/medsecure-fe/prod",
          "outputHashing": "all"
        }
      }
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "sslKey": "certs/dev_localhost.key",
        "sslCert": "certs/dev_localhost.pem",
        "port": 4200,
        "buildTarget": "medsecure-fe:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "medsecure-fe:build:development"
        },
        "staging": {
          "buildTarget": "medsecure-fe:build:staging"
        },
        "production": {
          "buildTarget": "medsecure-fe:build:production"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "medsecure-fe:build"
      }
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "polyfills": [
          "zone.js",
          "zone.js/testing"
        ],
        "tsConfig": "tsconfig.spec.json",
        "assets": [
          "src/favicon.ico",
          "src/assets"
        ],
        "styles": [
          {
            "input": "node_modules/@progress/kendo-theme-default/dist/all.css"
          },
          "@angular/material/prebuilt-themes/indigo-pink.css",
          "src/styles.css"
        ],
        "scripts": []
      }
    }
  }
}
